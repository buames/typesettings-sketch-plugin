{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "target": "esnext",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": false,
    "skipLibCheck": false,
    "typeRoots": [ "node_modules/@types" ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "**/*/dist",
    "node_modules"
  ]
}
