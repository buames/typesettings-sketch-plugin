{
  "compilerOptions": {
    "baseUrl": "src",
    "rootDir": ".",
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "target": "esnext",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": false,
    "skipLibCheck": false,
    "paths": {
      "assets/*": ["assets/*"],
      "directory/*": ["directory/*"],
      "plugin/*": ["plugin/*"]
    },
    "typeRoots": [
      "node_modules/@types",
      "src/types/cocoa.d.ts",
      "src/types/sketch/*.d.ts"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "**/*/dist",
    "node_modules"
  ]
}
